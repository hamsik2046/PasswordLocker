<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_account_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp" >

        <LinearLayout
            android:id="@+id/category_and_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/ll_choose_caterogy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="horizontal" >
                <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/choose_category" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/tv_choose_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Choose Category"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:id="@+id/ll_show_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp" 
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Caterogy"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/tv_show_category"
                            android:layout_height="0dp" 
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:text="website"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/choose_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/choose_icon" />
        </LinearLayout>
        <EditText 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/et_username"
            android:layout_below="@id/category_and_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"/>
        <EditText 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/et_password"
            android:layout_below="@id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"/>
        <EditText 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/et_remark"
            android:layout_below="@id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="remarks"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/cancel_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/green_main"
                android:textColor="#ffffff"
                android:text="Cancel" />
            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/confirm_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:background="@color/green_main"
                android:textColor="#ffffff"
                android:text="Confirm" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
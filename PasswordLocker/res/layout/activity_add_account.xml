<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res/com.hamsik2046.password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_account_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp" >

        <LinearLayout
            android:id="@+id/category_and_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/ll_choose_caterogy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:scaleType="center"
                    android:src="@drawable/choose_category" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp" >

                    <TextView
                        android:id="@+id/tv_choose_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Choose Category"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_show_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Caterogy"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_show_category"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="website" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/choose_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/choose_icon" />
        </LinearLayout>

        <com.hamsik2046.password.view.EditTextWithDeleteButton
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/category_and_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textfield_bg"
            android:ems="10"
            android:orientation="horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:deleteButtonRes="@drawable/text_field_clear_btn"
            custom:hintText="username" />
        <!-- <EditText -->
        <!-- android:layout_marginLeft="10dp" -->
        <!-- android:layout_marginRight="10dp" -->
        <!-- android:layout_marginTop="10dp" -->
        <!-- android:id="@+id/et_username" -->
        <!-- android:layout_below="@id/category_and_icon" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:hint="username"/> -->

        <com.hamsik2046.password.view.EditTextWithDeleteButton
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/et_username"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textfield_bg"
            android:ems="10"
            android:orientation="horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:deleteButtonRes="@drawable/text_field_clear_btn"
            custom:hintText="password" />
        <!-- <EditText -->
        <!-- android:layout_marginLeft="10dp" -->
        <!-- android:layout_marginRight="10dp" -->
        <!-- android:layout_marginTop="10dp" -->
        <!-- android:id="@+id/et_password" -->
        <!-- android:layout_below="@id/et_username" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:hint="password"/> -->

        <com.hamsik2046.password.view.EditTextWithDeleteButton
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/et_password"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textfield_bg"
            android:ems="10"
            android:orientation="horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            custom:deleteButtonRes="@drawable/text_field_clear_btn"
            custom:hintText="remark" />
        <!-- <EditText -->
        <!-- android:layout_marginLeft="10dp" -->
        <!-- android:layout_marginRight="10dp" -->
        <!-- android:layout_marginTop="10dp" -->
        <!-- android:id="@+id/et_remark" -->
        <!-- android:layout_below="@id/et_password" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:singleLine="false" -->
        <!-- android:hint="remarks"/> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/cancel_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/green_main"
                android:text="Cancel"
                android:textColor="#ffffff" />

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/confirm_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/green_main"
                android:text="Confirm"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
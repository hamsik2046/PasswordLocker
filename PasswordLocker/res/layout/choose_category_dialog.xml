<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res/com.hamsik2046.password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/choose_icon_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/green_main"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/choose_caterogy"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    <ListView 
        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"></ListView>

    <com.gc.materialdesign.views.ButtonFloatSmall
                android:id="@+id/add_category_buttonfolat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:background="@color/green_main"
                materialdesign:iconDrawable="@drawable/ic_action_new" />

</LinearLayout>
